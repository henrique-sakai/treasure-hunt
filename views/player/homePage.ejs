<!DOCTYPE html>

<html>

    <head>
        <title>Geolocation</title>
        <meta charset="UTF-8">
        <meta name="viewport"
              content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    </head>

    <body>
     
     <div style="width:80%; margin:auto">

        <p></p>
        <h2>Adventures</h2>
        <p></p>

        <div id="accordion">

            <% if (adventures.length > 0) {%>
                <% adventures.forEach((adv, i) => { %>

            <div class="card" id="<%= adv.adventure_id %>">
                <div class="card-header">
                    <a class="card-link" data-toggle="collapse" href="#collapse<%= adv.adventure_id %>">
                        <%= adv.name %>
                    </a>
                </div>

            </div>

                <% }) %>
            <% } %>

        </div>
        
    </div>

    <script type="text/javascript">

        <% if(quests.length > 0) { %>
            <% quests.forEach((quest, j) => { %>

        var element = 
            '<div id="collapse<%= quest.adventure_id %>" class="collapse show" data-parent="#accordion">\
                <div class="card-body">\
                    <a href="/play/adventure-<%= quest.adventure_id %>/quest-<%= quest.quest_id %>"><%= quest.name %></a>\
                </div>\
            </div>';

        $( "#<%= quest.adventure_id %>" ).append(element);

            <% }) %>
        <% } %>
    </script>

    </body>

</html>